<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_pos_config_form_customer_mandatory" model="ir.ui.view">
            <field name="name">pos.config.form.customer.mandatory</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
            <field name="arch" type="xml">
                <!-- Agregar despuÃ©s del setting de IoT Box -->
                <xpath expr="//setting[@id='other_devices']" position="after">
                    <setting string="Cliente Obligatorio" 
                             help="Requiere que se seleccione un cliente antes de procesar el pago">
                        <field name="require_customer"/>
                        <div class="content-group mt16" invisible="not require_customer">
                            <div class="row">
                                <label string="Cliente Predeterminado" for="default_customer_id" class="col-lg-4 o_light_label"/>
                                <field name="default_customer_id" 
                                       class="col-lg-8"
                                       options="{'no_create': True, 'no_create_edit': True}"
                                       placeholder="Seleccionar cliente predeterminado..."/>
                            </div>
                        </div>
                    </setting>
                </xpath>
            </field>
        </record>
    </data>
</odoo>